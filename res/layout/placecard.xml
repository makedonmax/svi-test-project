<?xml version="1.0" encoding="utf-8"?>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/placecard_cardview_layout_padding"
                android:background="@android:color/white"
                >

            <ImageView
                    android:id="@+id/place_image"
                    android:layout_width="@dimen/placecard_cardview_place_image_width"
                    android:layout_height="@dimen/placecard_cardview_place_image_height"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/placecard_cardview_place_image_margin_left"/>

            <TextView
                    android:id="@+id/place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/place_image"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/placecard_cardview_place_title_text_size"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:id="@+id/place_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/place_image"
                    android:layout_below="@+id/place_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@android:color/darker_gray"/>

        </RelativeLayout>